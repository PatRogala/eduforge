%div.flex.flex-col.gap-6.p-4
  %div.flex.justify-between.items-center
    %h1.text-2xl.font-bold.text-gray-800= t('.edit_course')
    = link_to t('.back_to_course'), instructor_programming_course_path(@course), class: 'px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-gray-700 transition-colors duration-200'

  - section = params[:section] || 'details'

  = turbo_frame_tag "course_details" do
    - if section == 'details'
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %h2.text-lg.font-semibold.text-gray-700.mb-4= t('.edit_course_details')
        
        = form_with(model: [:instructor, @course], class: 'space-y-4') do |f|
          .field
            = f.label :title, t('.title'), class: 'block text-sm font-medium text-gray-700 mb-1'
            = f.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-colors duration-200'
          
          .field.mt-4
            = f.label :description, t('.description'), class: 'block text-sm font-medium text-gray-700 mb-1'
            = f.rich_text_area :description, placeholder: t('.description_placeholder'), class: 'w-full'
          
          .actions.flex.gap-2.mt-6
            = f.submit t('.save'), class: 'py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors duration-200'
            = link_to t('.cancel'), instructor_programming_course_path(@course), class: 'py-2 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md transition-colors duration-200'
    - else
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %div.flex.justify-between.items-center.mb-4
          %h2.text-lg.font-semibold.text-gray-700= t('.course_details')
          = link_to t('.edit'), edit_instructor_programming_course_path(@course), class: 'text-blue-600 hover:text-blue-700'
        
        %div.space-y-4
          %div.flex.items-center.gap-2
            %span.text-gray-600= t('.created_at')
            %span.text-gray-800= @course.created_time_ago

          %div.flex.items-center.gap-2
            %span.text-gray-600= t('.instructor')
            %span.text-gray-800= @course.instructor.email

  = turbo_frame_tag "course_content" do
    - if section == 'content'
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %h2.text-lg.font-semibold.text-gray-700.mb-4= t('.edit_course_content')
        
        = form_with(model: [:instructor, @course], class: 'space-y-4') do |f|
          = hidden_field_tag :section, 'content'
          
          %p.text-gray-600.mb-4= t('.content_editor_coming_soon')
          
          .actions.flex.gap-2.mt-6
            = f.submit t('.save'), class: 'py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors duration-200'
            = link_to t('.cancel'), instructor_programming_course_path(@course), class: 'py-2 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md transition-colors duration-200'
    - else
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %div.flex.justify-between.items-center.mb-4
          %h2.text-lg.font-semibold.text-gray-700= t('.course_content')
          = link_to t('.edit_content'), edit_instructor_programming_course_path(@course, section: 'content'), class: 'text-blue-600 hover:text-blue-700'
        
        %div.space-y-4
          %p.text-gray-600= t('.no_content_yet')

  = turbo_frame_tag "course_settings" do
    - if section == 'settings'
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %h2.text-lg.font-semibold.text-gray-700.mb-4= t('.edit_course_settings')
        
        = form_with(model: [:instructor, @course], class: 'space-y-4') do |f|
          = hidden_field_tag :section, 'settings'
          
          %p.text-gray-600.mb-4= t('.settings_editor_coming_soon')
          
          .actions.flex.gap-2.mt-6
            = f.submit t('.save'), class: 'py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors duration-200'
            = link_to t('.cancel'), instructor_programming_course_path(@course), class: 'py-2 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md transition-colors duration-200'
    - else
      %div.bg-white.p-6.rounded-lg.shadow-sm.border.border-gray-200
        %div.flex.justify-between.items-center.mb-4
          %h2.text-lg.font-semibold.text-gray-700= t('.course_settings')
          = link_to t('.edit_settings'), edit_instructor_programming_course_path(@course, section: 'settings'), class: 'text-blue-600 hover:text-blue-700'
        
        %div.space-y-4
          %p.text-gray-600= t('.no_settings_configured')
!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= content_for(:title) || "Eduforge"
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "yes", :name => "mobile-web-app-capable"}/
    %meta{content: "morph", name: "turbo-refresh-method"}/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    = tag.link rel: "manifest", href: pwa_manifest_path(format: :json)
    %link{:href => "/icon.png", :rel => "icon", :type => "image/png"}/
    %link{:href => "/icon.svg", :rel => "icon", :type => "image/svg+xml"}/
    %link{:href => "/icon.png", :rel => "apple-touch-icon"}/
    = stylesheet_link_tag :app, "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body
    - if notice
      #flash-notice.fixed.top-4.right-4.z-50.transform.transition-all.duration-500.ease-in-out.translate-x-0.opacity-100.flex.items-center.px-4.py-3.rounded-lg.bg-green-50.text-green-800.shadow-lg{"data-controller": "flash", "data-flash-target": "message", "data-flash-hide-after-value": "3000"}
        %svg.w-5.h-5.mr-2{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
        = notice
    - if alert
      #flash-alert.fixed.top-4.right-4.z-50.transform.transition-all.duration-500.ease-in-out.translate-x-full.opacity-0.flex.items-center.px-4.py-3.rounded-lg.bg-red-50.text-red-800.shadow-lg{"data-controller": "flash", "data-flash-target": "message", "data-flash-hide-after-value": "3000"}
        %svg.w-5.h-5.mr-2{:fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2"}
        = alert
    = render Sidebar::SidebarComponent.new(current_user: current_user)
    %div.mx-auto.p-8{class: "ml-[60px]"}
      = yield

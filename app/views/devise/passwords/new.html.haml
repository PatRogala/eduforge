%div.flex.flex-col.items-center.justify-center{class: "min-h-[90vh]"}
  .bg-white.p-8.rounded-lg.shadow-md.w-full.max-w-md
    %h2.text-2xl.font-bold.text-center.mb-6.text-gray-800= t('.forgot_your_password')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-4 w-full' }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent'
      .actions
        = f.submit t('.send_me_reset_password_instructions'), class: 'w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 transition-colors duration-200'
    .mt-4.text-center
      = render "devise/shared/links"

%div.flex.flex-col.items-center.justify-center.px-4.py-12{class: "sm:px-6 lg:px-8"}
  .w-full.max-w-md.space-y-8
    %div.text-center
      -# Optional: Add your logo here
      -# = link_to root_path do
      -#   = image_tag "logo_dark_theme.svg", class: "mx-auto h-12 w-auto", alt: t("app.name")
      .mx-auto.h-12.w-12.bg-accent.rounded-lg.flex.items-center.justify-center
        = lucide_icon("key-round", class: "text-accent-content w-7 h-7")
      %h2.mt-6.text-3xl.font-bold.tracking-tight.text-text-primary= t('.forgot_your_password_title')
      %p.mt-2.text-sm.text-text-secondary= t('.forgot_password_instructions')


    .bg-bg-secondary.shadow-2xl.rounded-xl.p-8.sm:p-10.border.border-border-primary
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f|
        = render "devise/shared/error_messages", resource: resource

        %div
          = f.label :email, class: 'block text-sm font-medium text-text-secondary mb-1'
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'appearance-none block w-full px-3 py-2.5 bg-bg-tertiary border border-border-primary rounded-md shadow-sm placeholder-text-secondary text-text-primary focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent sm:text-sm'

        %div
          = f.submit t('.send_me_reset_password_instructions_button'), class: 'w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-accent-content bg-accent hover:bg-accent-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent focus:ring-offset-bg-secondary transition-colors duration-150'

      - if (controller_name != 'sessions') || (devise_mapping.registerable? && controller_name != 'registrations')
        %p.mt-8.text-center.text-sm.text-text-secondary
          = t('.remembered_password_prompt')
          %br
          = link_to t('.sign_in_link'), new_session_path(resource_name), class: "font-medium text-accent hover:text-accent-hover ml-1"
          - if devise_mapping.registerable? && controller_name != 'registrations'
            %span.text-text-tertiary.mx-1= t('.or')
            = link_to t('.sign_up_link'), new_registration_path(resource_name), class: "font-medium text-accent hover:text-accent-hover"


    - unless ((controller_name != 'sessions') || (devise_mapping.registerable? && controller_name != 'registrations'))
      .mt-6.text-center.text-sm
        = render "devise/shared/links"

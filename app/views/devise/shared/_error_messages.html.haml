- if resource.errors.any?
  #error_explanation.mb-4.rounded-md.p-4{"data-turbo-cache" => "false", class: "bg-notification/10"}
    .flex
      .flex-shrink-0
        = lucide_icon("alert-circle", class: "h-5 w-5 text-notification")
      .ml-3
        %h3.text-sm.font-medium.text-notification
          = t("errors.messages.not_saved.#{resource.errors.count == 1 ? 'one' : 'other'}", resource: resource.class.model_name.human.downcase, count: resource.errors.count)
        .mt-2.text-sm{class: "text-notification/80"}
          %ul.list-disc.space-y-1.pl-5
            - resource.errors.full_messages.each do |message|
              %li= message

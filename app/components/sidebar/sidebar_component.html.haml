%aside.bg-bg-secondary.border-r.border-border-primary.transition-all.duration-300.overflow-hidden.min-h-screen{"data-sidebar-target": "aside"}
  .h-full.flex.flex-col.py-4
    %nav.flex-1.px-2
      %ul.space-y-1
        %li
          %span.px-3.text-xs.font-semibold.uppercase.text-text-tertiary{"data-sidebar-target": "category"}= t(".navigation.main")
          - public_links.each do |link|
            = render_link(link)
        - if logged_in?
          %li.pt-2
            %span.px-3.text-xs.font-semibold.uppercase.text-text-tertiary{"data-sidebar-target": "category"}= t(".navigation.personal")
            - logged_in_links.each do |link|
              = render_link(link)
        - if instructor?
          %li.pt-2
            %span.px-3.text-xs.font-semibold.uppercase.text-text-tertiary{"data-sidebar-target": "category"}= t(".navigation.instructor")
            - instructor_links.each do |link|
              = render_link(link)

.absolute.right-0.mt-2.w-64.bg-bg-secondary.rounded-lg.shadow-xl.border.border-border-primary.py-2.animate-fadeIn.z-50
  .px-4.py-3.border-b.border-border-primary
    %p.text-sm.font-medium.text-text-primary.truncate= current_user.email
    - roles_display = current_user.roles.map(&:name).map(&:titleize).join(', ')
    - if roles_display.present?
      %p.text-xs.text-text-secondary.mt-1= roles_display
  .py-1
    = link_to edit_user_registration_path, class: "group w-full px-4 py-2 text-sm text-text-secondary hover:bg-bg-tertiary hover:text-text-primary flex items-center" do
      %span.mr-3>
        = lucide_icon("settings-2", class: "h-4 w-4 text-text-tertiary group-hover:text-text-secondary")
      = t(".account_settings")
  .border-t.border-border-primary.my-1
  .py-1
    = button_to destroy_user_session_path, method: :delete, class: "group w-full px-4 py-2 text-sm text-notification hover:bg-red-900/20 hover:text-red-400 flex items-center cursor-pointer" do
      %span.mr-3>
        = lucide_icon("log-out", class: "h-4 w-4 text-notification group-hover:text-red-400")
      = t(".log_out")

.grid.grid-cols-2.md:grid-cols-4.gap-4
  .bg-green-50.p-4.rounded-xl.border.border-gray-100
    .flex.items-center
      .p-2.bg-white.rounded-lg
        = lucide_icon("circle-check-big", class: "text-green-500 w-5 h-5")
      .ml-3
        %p.text-xs.text-gray-500= t(".courses_completed")
        %p.font-semibold.text-gray-900= completed_courses_count
  .bg-blue-50.p-4.rounded-xl.border.border-gray-100
    .flex.items-center
      .p-2.bg-white.rounded-lg
        = lucide_icon("clock", class: "text-blue-500 w-5 h-5")
      .ml-3
        %p.text-xs.text-gray-500= t(".hours_learned")
        %p.font-semibold.text-gray-900= hours_learned_count
  .bg-purple-50.p-4.rounded-xl.border.border-gray-100
    .flex.items-center
      .p-2.bg-white.rounded-lg
        = lucide_icon("award", class: "text-purple-500 w-5 h-5")
      .ml-3
        %p.text-xs.text-gray-500= t(".certificates_earned")
        %p.font-semibold.text-gray-900= certificates_earned_count
  .bg-orange-50.p-4.rounded-xl.border.border-gray-100
    .flex.items-center
      .p-2.bg-white.rounded-lg
        = lucide_icon("flame", class: "text-orange-500 w-5 h-5")
      .ml-3
        %p.text-xs.text-gray-500= t(".current_streak")
        %p.font-semibold.text-gray-900= current_streak_count

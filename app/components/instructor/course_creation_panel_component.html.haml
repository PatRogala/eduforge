.p-6
  .mb-8
    %h1.text-2xl.font-bold.text-gray-900= t(".new_course")
    %p.mt-2.text-gray-600= t(".choose_category")
  .grid.grid-cols-1.md:grid-cols-2.gap-6
    = link_to instructor_programming_courses_path, class: "relative bg-white p-6 rounded-xl border border-gray-100 transition-all duration-200 hover:shadow-md hover:border-indigo-100" do
      .flex.items-start.space-x-4
        .flex-shrink-0
          .p-3.bg-indigo-50.rounded-lg
            = lucide_icon("code", class: "text-indigo-600")
        .flex-1
          .flex.items-center.space-x-2
            %h3.text-lg.font-medium.text-gray-900= t(".programming")
          %p.mt-1.text-sm.text-gray-500= t(".programming_description")
    .relative.bg-white.p-6.rounded-xl.border.border-gray-100.transition-all.duration-200.opacity-75.cursor-not-allowed
      .flex.items-start.space-x-4
        .flex-shrink-0
          .p-3.bg-indigo-50.rounded-lg
            = lucide_icon("brain", class: "text-gray-400")
        .flex-1
          .flex.items-center.space-x-2
            %h3.text-lg.font-medium.text-gray-900= t(".artificial_intelligence")
            %span.inline-flex.items-center.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800{class: "px-2.5 py-0.5"}= t(".coming_soon")
          %p.mt-1.text-sm.text-gray-500= t(".artificial_intelligence_description")
      .absolute.inset-0.rounded-xl.flex.items-center.justify-center{class: "bg-white/50"}
        .p-2.rounded-full{class: "bg-gray-100/80"}
          = lucide_icon("lock", class: "text-gray-400")
    .relative.bg-white.p-6.rounded-xl.border.border-gray-100.transition-all.duration-200.opacity-75.cursor-not-allowed
      .flex.items-start.space-x-4
        .flex-shrink-0
          .p-3.bg-indigo-50.rounded-lg
            = lucide_icon("shapes", class: "text-gray-400")
        .flex-1
          .flex.items-center.space-x-2
            %h3.text-lg.font-medium.text-gray-900= t(".three_d_animation")
            %span.inline-flex.items-center.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800{class: "px-2.5 py-0.5"}= t(".coming_soon")
          %p.mt-1.text-sm.text-gray-500= t(".three_d_animation_description")
      .absolute.inset-0.rounded-xl.flex.items-center.justify-center{class: "bg-white/50"}
        .p-2.rounded-full{class: "bg-gray-100/80"}
          = lucide_icon("lock", class: "text-gray-400")
  .mt-8.bg-indigo-50.rounded-xl.p-6
    .flex.items-start.space-x-4
      .p-3.bg-indigo-100.rounded-lg
        = lucide_icon("graduation-cap", class: "text-indigo-600")
      %div
        %h3.text-lg.font-medium.text-gray-900= t(".course_creation_guide")
        %p.mt-1.text-sm.text-gray-600= t(".course_creation_guide_description")
        %button.mt-3.inline-flex.items-center.text-sm.font-medium.text-indigo-600.hover:text-indigo-700.cursor-pointer= t(".view_course_creation_guide")
